<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}SnowTricks{% endblock %}</title>
        <link rel="icon" href="/images/svg/snowboarding-solid.svg">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {# templates/base.html.twig #}

        {# beware that the blocks in your template may be named different #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        {% endblock %}
        {% block javascripts %}
            <!-- Font Awesome icons (free version)-->
            <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        {% endblock %}

    </head>
    <body>
        <header>
            {% block header %}<!-- Navigation-->
            <div class="dspNone">
            <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
                    <div class="container px-4 px-lg-5">
                        <a class="navbar-brand" href="/home"><i class="fas fa-snowboarding fa-rotate-270"></i></a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                            Menu
                            <i class="fas fa-bars"></i>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarResponsive">
                            <ul class="navbar-nav ms-auto py-4 py-lg-0">
                                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/home">Home</a></li>
                                <li class="nav-item dropdown"><a class="nav-link px-lg-3 py-3 py-lg-4 dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Tricks</a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="#">Tricks1</a></li>
                                        <li><a class="dropdown-item" href="#">Tricks2</a></li>
                                        <li><a class="dropdown-item" href="#">Tricks3</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/login">Sign in</a></li>
                                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/register">Sign up</a></li>
                            </ul>
                        </div>
                    </div>
            {% endblock %}
        </header>
        <body>
            {% block body %}{% endblock %}
        </body>
        <br><br />
        <footer>
        <style>

             @media (min-width: 250px) {

                .dspNone {
                    display: none;
                }
            }
            @media (min-width: 576px) {

                .dspNone {
                    display: none;
                }
            }
            @media (min-width: 992px) {
                .dispN {
                    display: none;
                }
                .dspNone {
                    display: contents;
                }
            }
        </style>
            {% block footer %}<div class="container dispN" style="margin: 50px">
                <div class="row">
                    <div class="col-3"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/home"><i class="fa-solid fa-house"></i></a></div>
                    <div class="col-3 nav-item dropdown"><a class="nav-link px-lg-3 py-3 py-lg-4 dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-list-ul"></i></a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Tricks1</a></li>
                            <li><a class="dropdown-item" href="#">Tricks2</a></li>
                            <li><a class="dropdown-item" href="#">Tricks3</a></li>
                        </ul>
                    </div>
                    <div class="col-3"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/login"><i class="fa-solid fa-arrow-right-to-bracket"></i></a></div>
                </div>
            </div>
            <div class="dspNone">
            <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
                <div class="container px-4 px-lg-5">
                    <a class="navbar-brand" href="/home" style="font-size:11px">copyright@ 2023</i></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                        Menu
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarResponsive">
                        <ul class="navbar-nav ms-auto py-4 py-lg-0">
                            <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/home">Home</a></li>
                            <li class="nav-item dropdown"><a class="nav-link px-lg-3 py-3 py-lg-4 dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Tricks</a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="#">Tricks1</a></li>
                                    <li><a class="dropdown-item" href="#">Tricks2</a></li>
                                    <li><a class="dropdown-item" href="#">Tricks3</a></li>
                                </ul>
                            </li>
                            <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/login">Sign in</a></li>
                            <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/register">Sign up</a></li>
                        </ul>
                    </div>
            </div>
            {% endblock %}
        </footer>
    </body>
</html>
